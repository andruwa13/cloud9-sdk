root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
indent_size = 4

[*.java]
indent_brace_style = Allman
indent_style = space
indent_size = 4
continuation_indent_size = 0

[*.{yaml,yml}]
indent_style = space
end_of_line = lf
charset = utf-8
indent_size = 2
